extends ../layout/base
block content
    section.content-header
        h1
            | Add Product
            small we got what you need
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
            li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Desk
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip', title='collapse').btn.btn-box-tool
                        i.fa.fa-minus
            .box-body
                form(role='form', method='post' action='/desks/add')
                    .row
                        .col-xs-6
                            .box-body
                                - if(messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | x
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Code
                                    input(type="text", value='#{code}', name='code', placeholder='Enter Code', autofocus).form-control
                                .form-group
                                    label
                                        | Name
                                    input(type="text", name='name', placeholder='Enter Name').form-control
                                .form-group
                                    label
                                        | Details
                                    input(type="text", value='#{detail}', name='detail', placeholder='Enter Detail').form-control
                                .form-group
                                    label
                                        | Price
                                    input(type="text", name='price', placeholder='Enter Price').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit
                                a(href='/desks').btn.btn-primary.pull-right
                                    | Back