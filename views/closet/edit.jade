extends ../layout/base
block content
    section.content-header
        h1
            | Edit Product
            small we got what you need
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
            li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Closet
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toogle='tooltip', title='collapse').btn.btn-box-tool
                        i.fa.fa-minus
            .box-body
                form(role='form', method='post', action='/closets/edit/#{(id==undefined) ? data.id : id}')
                    .row
                        .col-xs-6
                            .box.body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | x
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                - if (messages.msg_info)
                                    .alert.alert-success.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | x
                                        h4
                                            i.icon.fa.fa-ban
                                            | Success!
                                        | !{messages.msg_info}
                                .form-group
                                    label
                                        | Code
                                    input(type="text", value='#{data.code}', name="code", placeholder='Enter Code', autofocus).form-control
                                .form-group
                                    label
                                        | Name
                                    input(type="text", value='#{(name==undefined) ? data.name : name }', name="name", placeholder='Enter Name').form-control
                                .form-group
                                    label
                                        | Details
                                    input(type="text", value='#{(detail==undefined) ? data.detail : detail }', name="detail", placeholder='Enter Details').form-control
                                .form-group
                                    label
                                        | Price
                                    input(type="text", value='#{(price==undefined) ? data.price : price }', name="price", placeholder='Enter Price').form-control
                            .box-footer
                                input(type="hidden", name='_method', value='PUT')
                                button(type='submit').btn.btn-primary
                                    i.fa.fa-pencil
                                    | Edit
                                a(href='/closets').btn.btn-primary.pull-right
                                    | Back